{
  "version": 4,
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "PACKETVER": "20211103"
      }
    },
    {
      "name": "linux",
      "inherits": "base",
      "generator": "Unix Makefiles",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release",
      "inherits": "linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-relwithdebinfo",
      "inherits": "linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-release",
      "inherits": "windows"
    },
    {
      "name": "windows-debug",
      "inherits": "windows"
    }
  ],
  "buildPresets": [
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "targets": [
        "server"
      ]
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "targets": [
        "server"
      ]
    },
    {
      "name": "linux-relwithdebinfo",
      "configurePreset": "linux-relwithdebinfo"
    },
    {
      "name": "windows-release",
      "configurePreset": "windows-release",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows-debug",
      "configuration": "Debug"
    }
  ]
}
