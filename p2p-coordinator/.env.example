# P2P Coordinator Service Configuration
# ============================================================================
# SECURITY WARNING: This is an example file. Copy to .env and change all secrets!
# NEVER commit .env to version control!
# ============================================================================

# Service Configuration
P2P_SERVICE_HOST=0.0.0.0
P2P_SERVICE_PORT=8001
P2P_SERVICE_ENV=development
P2P_SERVICE_NAME=p2p-coordinator
P2P_SERVICE_VERSION=1.0.0

# Database Configuration (shared with ai-service)
# DragonflyDB Configuration (Redis-compatible protocol)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=p2p_coordinator
POSTGRES_USER=p2p_user
POSTGRES_PASSWORD=p2p_pass_2025

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
# TURN Server (optional - leave empty if not using TURN)
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# Host Requirements
MIN_CPU_CORES=4
MIN_CPU_FREQUENCY_MHZ=3000
MIN_MEMORY_MB=8192
MIN_NETWORK_SPEED_MBPS=100
MAX_LATENCY_MS=100

# P2P Features
ENABLE_P2P=true
P2P_ENABLED_ZONES=prontera,geffen,payon
P2P_FALLBACK_ENABLED=true
P2P_MAX_PLAYERS_PER_HOST=50
P2P_SESSION_TIMEOUT_SECONDS=300
P2P_HOST_HEALTH_CHECK_INTERVAL_SECONDS=30

# Integration with AI Service
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your-api-key-here
AI_SERVICE_ENABLED=true

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security - REQUIRED IN PRODUCTION
# Generate secure keys: openssl rand -hex 32
API_KEY_HEADER=X-API-Key
COORDINATOR_API_KEY=CHANGE_THIS_REQUIRED_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_SECRET_KEY=CHANGE_THIS_REQUIRED_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=3600
API_KEY_VALIDATION_ENABLED=true
JWT_VALIDATION_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

